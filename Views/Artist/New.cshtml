@model Proj.Models.ArtistWikiViewModel

@{
    ViewBag.Title = "Add new artist";
}

<br />
<h2>@ViewBag.Title</h2>
<br />

@using (Html.BeginForm(actionName: "New", controllerName: "Artist", method: FormMethod.Post))
{
    @Html.Label("Name", "Name:")
    <br />
    @Html.TextBoxFor(p => p.Name, null, new { placeholder = "Type in the artist's name", @class = "form-control" })
    @Html.ValidationMessageFor(p => p.Name, "", new { @class = "text-danger" })
    <br />

    @Html.LabelFor(p => p.Country, "Country:")
    <br />
    @Html.TextBoxFor(p => p.Country, null, new { placeholder = "Type in the artist's country", @class = "form-control" })
    @Html.ValidationMessageFor(p => p.Country, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Description", "Description:")
    <br />
    @Html.TextArea("Description", null, new { placeholder = "Type in the artist's description", @class = "form-control", @rows = "10" })
    @Html.ValidationMessageFor(b => b.Description, "", new { @class = "text-danger" })
    <br />

    <label>Birth date:</label>
    <br />
    @Html.TextBoxFor(p => p.BirthDay, null, new { placeholder = "Day", @class = "form-control", @style = "margin-bottom:3px" })
    @Html.ValidationMessageFor(p => p.BirthDay, "", new { @class = "text-danger" })

    @Html.TextBoxFor(p => p.BirthMonth, null, new { placeholder = "Month", @class = "form-control", @style = "margin-bottom:3px" })
    @Html.ValidationMessageFor(p => p.BirthMonth, "", new { @class = "text-danger" })

    @Html.TextBoxFor(p => p.BirthYear, null, new { placeholder = "Year", @class = "form-control", @style = "margin-bottom:3px", @type = "number" })
    @Html.ValidationMessageFor(p => p.BirthYear, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.LabelFor(p => p.DebutYear, "Year of debut:")
    <br />
    @Html.TextBoxFor(p => p.DebutYear, null, new { placeholder = "Type in the artist's debut year", @class = "form-control" })
    @Html.ValidationMessageFor(p => p.DebutYear, "", new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-outline-dark" type="submit">Create</button>
}